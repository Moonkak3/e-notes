<style>
    .collection_card {
        margin: 0.3em 0;
        padding-left: 8px;
        padding-right: 8px;
    }
</style>
<nav class="navbar navbar-expand-lg navbar-light" style="margin-top: 2em">
    <a class="navbar-brand" href="#">Collections</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#" onclick="renderCollections(true)"><i class="fas fa-sync"></i> Cache</a>
            </li>
            {{#if user.admin}}
                <li class="nav-item">
                    <a class="nav-link" href="#" data-action="add"
                       data-toggle="modal" data-target="#admin_collection_popup">
                        <i class="fas fa-plus"></i> New
                    </a>
                </li>
            {{/if}}
        </ul>
    </div>
</nav>
<script src="https://kit.fontawesome.com/c32b3db897.js" crossorigin="anonymous"></script>
<div id="display" class="row">

</div>

{{#if user.admin}}
    <!--  There are questionable code  -->
    <div class="modal fade" id="admin_collection_popup" tabindex="-1" aria-labelledby="collection_popup_title"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="collection_popup_title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="collection_form_id">Collection ID</label>
                            <input type="text" class="form-control" id="collection_form_id"
                                   aria-describedby="add_form_id_help"
                                   placeholder="ID is used in url">
                            <small id="add_form_id_help" class="form-text text-muted">Please don't use spaces</small>
                        </div>
                        <div class="form-group">
                            <label for="collection_form_name">Collection Name</label>
                            <input type="text" class="form-control" id="collection_form_name"
                                   placeholder="Any descriptive name">
                        </div>
                        <div class="form-group">
                            <label for="collection_form_desc">Collection Description</label>
                            <input type="text" class="form-control" id="collection_form_desc"
                                   placeholder="Helpful information">
                        </div>
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" id="collection_form_open_check">
                            <label class="form-check-label" for="collection_form_open_check">Open for all</label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-secondary" onclick="clearFields()">Clear</button>
                    <button id="deleteBtn" type="button" class="btn btn-danger" onclick="initDelete()">Delete
                    </button>
                    <button id="actionBtn" type="button" class="btn btn-primary"
                            onclick="actionBtnClicked(this.innerText.toLowerCase())"></button>
                </div>
                <script>
                    const idInput = document.getElementById('collection_form_id');
                    const nameInput = document.getElementById('collection_form_name');
                    const descInput = document.getElementById('collection_form_desc');
                    const openToAll = document.getElementById('collection_form_open_check');

                    const actionBtn = document.getElementById('actionBtn');
                    const deleteBtn = document.getElementById('deleteBtn');

                    // i hate jquery
                    $('#admin_collection_popup').on('show.bs.modal', async e => {
                        if ($(e.relatedTarget).data('action') === 'add') {
                            $('#collection_popup_title').text('Add collection');
                            idInput.disabled = false;
                            actionBtn.innerText = "Add";
                            deleteBtn.style.display = "none";
                            clearFields();
                        } else {
                            $('#collection_popup_title').text('Edit collection');
                            let cid = $(e.relatedTarget).data('cid');
                            let coll = await collections.get(cid);
                            idInput.value = coll.cid;
                            idInput.disabled = true;
                            nameInput.value = coll.name;
                            descInput.value = coll.desc;
                            openToAll.checked = coll.open;
                            actionBtn.innerText = "Edit";
                            deleteBtn.style.display = "inline-block";
                        }
                        idInput.setAttribute('placeholder', 'ID is used in url');
                        deleteBtn.innerText = "Delete";
                        deleteBtn.onclick = initDelete;
                    });

                    function actionBtnClicked(action) {
                        actionBtn.disabled = true;
                        fetcher(`/api/collections/${idInput.value}`, {
                            method: 'POST',
                            headers: {'Content-Type': 'application/json'},
                            body: JSON.stringify({
                                action: (action === 'add' ? 'add' : 'edit'),
                                name: nameInput.value,
                                desc: descInput.value,
                                open: openToAll.checked
                            })
                        }).then(result => {
                            actionBtn.disabled = false;
                            if (result.reason) {
                                alert(result.reason); // failed
                            } else {
                                $('#admin_collection_popup').modal('hide');
                                collections.update(idInput.value, result);
                                renderCollections();
                            }
                        }).catch(e => {
                            actionBtn.disabled = false;
                            console.log(e);
                        })
                    }

                    function initDelete() {
                        let cid = idInput.value;
                        $('#collection_popup_title').text(`Delete ${cid}? Please re-enter the id!`);
                        idInput.disabled = false;
                        idInput.value = "";
                        idInput.setAttribute('placeholder', cid);

                        deleteBtn.innerText = "Confirm";
                        deleteBtn.onclick = () => {
                            if (idInput.value === cid) {
                                deleteBtn.disabled = true;
                                fetcher(`/api/collections/${idInput.value}`, {
                                    method: 'DELETE'
                                }).then(result => {
                                    deleteBtn.disabled = false;
                                    if (result.reason) {
                                        alert(result.reason); // failed
                                    } else {
                                        $('#admin_collection_popup').modal('hide');
                                        collections.delete(cid);
                                        renderCollections();
                                    }
                                }).catch(e => {
                                    deleteBtn.disabled = false;
                                    console.log(e);
                                });
                            } else alert("ID mismatch!");
                        }
                    }

                    function clearFields() {
                        if (actionBtn.innerText === "Add") idInput.value = "";
                        nameInput.value = descInput.value = "";
                        openToAll.checked = false;
                    }
                </script>
            </div>
        </div>
    </div>
{{/if}}

<script>
    window.currentNav = "index";
    const display = document.getElementById('display')

    function renderCollections(forceReset = false) {
        collections.getAll(!forceReset).then(colls => {
            console.log(colls);
            display.innerHTML = colls.map(coll => `<div class="col-lg-3 col-md-5 col-sm-12 collection_card" id="coll_${coll.cid}">
<div class="card">
<div class="card-body">
<h5 class="card-title">${coll.name}</h5>
<h6 class="card-subtitle text-muted"><pre class="mb-1">${coll.cid}</pre></h6>
${coll.open ? '<span class="badge badge-success">Public</span>' : '<span class="badge badge-danger">Private</span>'}
<p class="card-text">${coll.desc}</p>
<a href="/c/${coll.cid}/" class="card-link">Open</a>
{{#if user.admin}}
<a href="#" class="card-link" data-toggle="modal" data-target="#admin_collection_popup" data-action="edit" data-cid="${coll.cid}">Edit</a>
{{/if}}
</div>
</div>
</div>`).join('\n');
        });
    }

    window.onload = _ => {
        renderCollections();
    }
</script>
