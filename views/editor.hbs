<style>
    .container-fluid {
        position: static;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .CodeMirror {
        height: 100%;
    }

    .ldBar.label-right .ldBar-label, .ldBar.label-right svg {
